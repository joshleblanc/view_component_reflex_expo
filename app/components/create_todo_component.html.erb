<%= component_controller class: "box" do %>
  <form data-action="submit->create-todo#add" data-key="<%= key %>">
    <div class="field has-addons">
      <div class="control is-expanded">
        <%= reflex_tag(
                "input->handle_name_change",
                :input,
                nil,
                class: "input is-rounded",
                placeholder: "What needs to be done?",
                name: "name"
            ) %>
      </div>
      <div class="control">
        <%= tag.button(
                'Add',
                type: "submit",
                class: "button is-info",
                disabled: @todo.name.empty?
            ) %>
      </div>
    </div>
  </form>
<% end %>
