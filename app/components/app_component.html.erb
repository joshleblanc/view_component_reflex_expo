<section class="section">
  <div class="container is-fluid">
    <div class="columns">
      <div class="column is-3">
        <aside class="menu">
          <p class="menu-label">Components</p>
          <ul class="menu-list">
            <% components.each do |c| %>
              <li data-reflex="click->AppComponentReflex#navigate" data-to="<%= c[:to] %>" data-key="<%= key %>">
                <a class="<%= @location == c[:to] && "is-active" %>"><%= c[:label] %></a>
              </li>
            <% end %>
          </ul>
        </aside>

      </div>
      <div class="column">
        <%= render(component) %>
      </div>
    </div>

  </div>
</section>
